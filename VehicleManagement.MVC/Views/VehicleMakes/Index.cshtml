@* @model IEnumerable<VehicleManagement.Service.Models.Entities.VehicleMake> *@
@model VehicleManagement.Service.Models.Response.PaginatedResponse<VehicleManagement.Service.Models.Entities.VehicleMake>


@{
    ViewData["Title"] = "Index";
    var prevDisabled = Model.CurrentPage == 1 ? "disabled" : "";
    var nextDisabled = Model.CurrentPage >= Model.TotalPages ? "disabled" : "";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model =>  model.Results.FirstOrDefault().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Results.FirstOrDefault().Abrv)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Results) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Abrv)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<div class="mt-3">
    <a asp-action="Index" asp-route-currentPage="@(Model.CurrentPage - 1)" class="btn btn-default @(prevDisabled)">Previous</a>
    <span>Page @Model.CurrentPage of @Model.TotalPages</span>
    <a asp-action="Index" asp-route-currentPage="@(Model.CurrentPage + 1)" class="btn btn-default @(nextDisabled)">Next</a>
</div>
